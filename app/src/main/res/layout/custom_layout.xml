<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCity"
                style="@style/mainTextViewButtonStyle.width145"
                android:text="@string/city" />

            <Spinner
                android:id="@+id/spinner"
                style="@style/mainTextEditSpinnerStyle.weight1"
                android:entries="@array/domain_arrays"
                android:prompt="@string/domain_prompt"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvObjName"
                style="@style/mainTextViewButtonStyle.width145"
                android:text="@string/objName" />

            <EditText
                android:id="@+id/etObjName"
                style="@style/mainTextEditSpinnerStyle.ems"
                android:hint="@string/objName"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAddress"
                style="@style/mainTextViewButtonStyle.width145"
                android:text="@string/address" />

            <EditText
                android:id="@+id/etAddress"
                style="@style/mainTextEditSpinnerStyle.ems"
                android:hint="@string/address"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFio"
                style="@style/mainTextViewButtonStyle.width145"
                android:text="@string/fio" />

            <EditText
                android:id="@+id/etFio"
                style="@style/mainTextEditSpinnerStyle.ems"
                android:hint="@string/fio"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTemp"
                style="@style/mainTextViewButtonStyle.width145"
                android:text="@string/temperature" />

            <EditText
                android:id="@+id/etTemp"
                style="@style/mainTextEditSpinnerStyle.ems"
                android:hint="@string/temperature"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHumidity"
                style="@style/mainTextViewButtonStyle.width145"
                android:text="@string/humidity" />

            <EditText
                android:id="@+id/etHumidity"
                style="@style/mainTextEditSpinnerStyle.ems"
                android:hint="@string/humidity"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAtmPressure"
                style="@style/mainTextViewButtonStyle.width145"
                android:text="@string/atmPressure" />

            <EditText
                android:id="@+id/etAtmPressure"
                style="@style/mainTextEditSpinnerStyle.ems"
                android:hint="@string/atmPressure"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRepNumber"
                style="@style/mainTextViewButtonStyle.width145"
                android:text="@string/repNumber" />

            <EditText
                android:id="@+id/etRepNumber"
                style="@style/mainTextEditSpinnerStyle.ems"
                android:hint="@string/repNumber"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                style="@style/mainTextViewButtonStyle.width145"
                android:text="@string/date" />

            <TextView
                android:id="@+id/tvSelectedDate"
                style="@android:style/Widget.Holo.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPrev"
                style="@style/mainTextViewButtonStyle.weight1"
                android:text="@string/prev" />

            <Button
                android:id="@+id/btnNext"
                style="@style/mainTextViewButtonStyle.weight1"
                android:text="@string/next" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
