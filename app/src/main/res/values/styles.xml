<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainTextViewButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mainTextViewButtonStyle.width145">
        <item name="android:width">145dp</item>
    </style>

    <style name="mainTextViewButtonStyle.weight1">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#f5a700</item>
    </style>

    <style name="mainTextEditSpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mainTextEditSpinnerStyle.weight1">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="mainTextEditSpinnerStyle.ems">
        <item name="android:ems">10</item>
    </style>

</resources>
